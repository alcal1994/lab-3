<% include ../partials/header %>

<section>
  <form action="/books" method="post" novalidate enctype="multipart/form-data">
    <fieldset>
      <legend>Book Information</legend>

      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="book_title" name="title" placeholder="Harry Potter and the Philosopher's Stone" required>
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        <input type="text" class="form-control" id="book_author" name="author" placeholder="J. K. Rowling." required>
      </div>

      <div class="form-group">
        <label for="NumberOfCopies">Number of Copies</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <div class="input-group-text">#</div>
          </div>

          <input type="number" class="form-control" id="book_copies" name="NumberOfCopies" placeholder="0" step="5" min="0" required>
        </div>
      </div>
    </fieldset>

    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-lg">Create book</button>
    </div>
  </form>
</section>

<% include ../partials/footer %>
