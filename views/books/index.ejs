<% include ../partials/header %>

<section>
  <div>
    <a href="/books/new">New book</a>
  </div>

  <div class="row">

    <% for ( let book of books ) { %>
      <div class="col-sm-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">
              <%= book.title %>
            </h5>

            <p>
              <%= book.author %>
            </p>

            <p>
              <%= book.NumberOfCopies %>
            </p>
            </div>
          </div>
        </div>
      </div>
    <% } %>
</section>

<% include ../partials/footer %>
